<h2>1. Compose a message.</h2>

	<%= form_for @message, html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
		<div class="col-sm-10">
			<%= f.label :content %>
			<%= f.text_field :content %>
	  </div>
  </div>
	<div class="form-group">
		<%= f.submit 'Create Message', class: "btn float-right" %>
	</div>
	<% end %>

            
